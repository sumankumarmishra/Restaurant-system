@model Restugrp07.Models.Cancelation

@{
    ViewBag.Title = "Upload proof of account";
}

<h2>Upload proof of account</h2>

@using (Html.BeginForm("Uploadproofofaccount", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)


        <div class="form-group">
            @Html.LabelFor(model => model.Refundedamount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                R @Html.DisplayFor(model => model.Refundedamount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Refundedamount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.isEligibleforrefund, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.DisplayFor(model => model.isEligibleforrefund)
                    @Html.ValidationMessageFor(model => model.isEligibleforrefund, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Proofofaccount, "Upload proof of your bank account", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" class="form-control" name="file" required />
                @Html.ValidationMessageFor(model => model.Proofofaccount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

