@model Restugrp07.Models.Cancelation

@{
    ViewBag.Title = "Cancel";
}

<h2>Cancel</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       

        <div class="form-group">
            @Html.LabelFor(model => model.Cancelationreason, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea class="form-control" name="Cancelationreason" required style="height:250px"></textarea>
                @Html.ValidationMessageFor(model => model.Cancelationreason, "", new { @class = "text-danger" })
            </div>
        </div>
       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="CONTINUE / SUBMIT" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

