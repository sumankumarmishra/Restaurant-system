@model IEnumerable<Restugrp07.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Departments</h2>

@if (TempData["Success"] != null)
{
    <div class="alert-success">
        @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert-success">
        @TempData["Error"]
    </div>
}

<p>
    <a href="/admin/admin/addcategory" class="btn btn-danger">Add category /department</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <form action="/admin/admin/updatecategory" method="post">

                <td>
                    <input type="text" name="Name" value="@item.Name" required />
                    <input type="text" name="id" value="@item.Id" hidden required />
                </td>

                <td>
                    <input type="submit" value="SUBMIT" class="btn btn-danger" />

                </td>
            </form>

        </tr>
    }

</table>
